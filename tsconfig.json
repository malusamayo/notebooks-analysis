{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"outDir": "dist/es5",
		"lib": [
			"es2015",
			"dom"
		],
		"sourceMap": true,
		"declaration": true,
		"rootDir": "src",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"exclude": [
		".vscode-test",
		"dist",
	]
}