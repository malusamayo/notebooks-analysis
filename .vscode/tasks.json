// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Live Unit Tests",
      "type": "npm",
      "script": "test",
      "group": "test",
      "isBackground": true,
      "problemMatcher": {
        "severity": "error",
        "pattern": [
          {
            "regexp": "AssertionError: (.*)$",
            "message": 1
          },
          {
            "regexp": "\\s*at .*webpack:///([^?]+)[?]:(\\d+):(\\d+)",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ]
      }
    }
  ]
}
